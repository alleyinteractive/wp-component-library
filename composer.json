{
  "authors": [
    {
      "name": "Alley Interactive",
      "email": "info@alley.com"
    }
  ],
  "autoload": {
    "classmap": ["inc/"]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "8.1"
    }
  },
  "description": "WP Component Library",
  "license": "GPL-2.0-or-later",
  "name": "alleyinteractive/wp-component-library",
  "require": {
    "cjstroud/classnames-php": "^1.0",
    "league/commonmark": "^2.0",
    "scrivo/highlight.php": "^v9.18",
    "paquettg/php-html-parser": "^3.1",
    "php": "8.1.*",
    "illuminate/support": "^9.0"
  },
  "require-dev": {
    "alleyinteractive/alley-coding-standards": "^0.3.0",
    "phpunit/phpunit": "^9.6",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "scripts": {
    "phpcbf": "phpcbf .",
    "phpcs": "phpcs . --runtime-set text_domain wp-component-library",
    "phpunit": "phpunit"
  },
  "type": "wordpress-plugin"
}
